# Sherpa Check-In Environment Variables
# Copy this file to .env and fill in your values

# Database (Postgres connection string)
DATABASE_URL=postgresql://user:password@localhost:5432/sherpa_checkin

# Flask
SECRET_KEY=your-secret-key-here
ADMIN_PASSWORD=admin
PORT=8001
LOG_LEVEL=INFO

# Email (Office 365 / Microsoft 365)
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=your-email@yourdomain.com
USE_TLS=1

# Google Sheets sync (replaces Zapier webhooks)
# GOOGLE_SHEET_ID: the spreadsheet ID from the URL (between /d/ and /edit)
GOOGLE_SHEET_ID=your-spreadsheet-id-here
# GOOGLE_SHEETS_CREDENTIALS: paste the entire service account JSON key
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Timezone for Excel display (stores UTC, displays local)
TIMEZONE=America/New_York

# Intake settings
DEFAULT_INTAKE_DAYS=7

# Worker settings (retry interval in seconds)
SHEETS_RETRY_INTERVAL=300
